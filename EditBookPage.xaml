<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryManagementSystem.EditBookPage"
             Title="Edit Book">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Entry x:Name="titleEntry" Placeholder="Book Title"/>
            <Entry x:Name="authorEntry" Placeholder="Author"/>
            <Entry x:Name="isbnEntry" Placeholder="ISBN"/>
            <Switch x:Name="availableSwitch" />
            <Button Text="Save Changes" Clicked="OnSaveChangesClicked"/>
            <Button Text="Cancel" Clicked="OnCancelClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>